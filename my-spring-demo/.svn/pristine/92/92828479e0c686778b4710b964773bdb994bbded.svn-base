<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.isz.erp.house.mapper.BusinessCircleDistrictMapper">
    <select id="selectTreeListByParams" parameterType="java.util.Map" resultType="com.isz.erp.facade.house.vo.DistrictBusinessCircleVo">
        select
          bc.business_circle_id id,
          bc.business_circle_name text,
          4 AS 'level'
        from business_circle_district bcd, business_circle bc
        where bc.business_circle_id=bcd.business_circle_id
        <if test="null != city_code and '' != city_code">
            and bcd.city_code=#{city_code}
        </if>
        <if test="null != area_code and '' != area_code">
            and bcd.area_code=#{area_code}
        </if>
    </select>

    <delete id="deleteByBusinessCircleId" parameterType="java.lang.String">
        delete from business_circle_district where business_circle_id=#{business_circle_id}
    </delete>
</mapper>