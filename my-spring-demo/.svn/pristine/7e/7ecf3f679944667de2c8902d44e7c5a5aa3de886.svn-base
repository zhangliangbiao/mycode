@Service("apartmentLogServiceBiz")
public class ApartmentLogServiceBiz {

    @Autowired
    private ApartmentLogMapper apartmentLogMapper;

    /**
     * 查出所有的有效公寓
     *
     * @param params
     * @return
     */
    public List<ApartmentLog> searchApartmentListByLog(Map<String, Object> params) {
        return apartmentLogMapper.searchApartmentListByLog(params);
    }

    /**
     * 查出所有的有效公寓的总数
     *
     * @return
     */
    public Integer searchApartmentListCountByLog(Map<String, Object> params) {
        return apartmentLogMapper.searchApartmentListCountByLog(params);
    }
    
    /**
     * 保存统计
     */
    public void insertApartmentCount(ApartmentCount apartmentCount){
    	apartmentLogMapper.insertApartmentCount(apartmentCount);
    }
    
    /**
     * 查询昨天的
     * @return
     */
    public ApartmentCount selectPreDayApartment(){
    	return apartmentLogMapper.selectPreDayApartment();
    }
    
    /**
     * 保存统计
     */
    public void insertApartmentCountRented(ApartmentCountRented apartmentCountRented){
    	apartmentLogMapper.insertApartmentCountRented(apartmentCountRented);
    }
    
    
    

}
