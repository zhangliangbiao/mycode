<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.isz.erp.house.mapper.OnlineHouseRecommendedMapper">
	<resultMap id="onlineHouseRecommendedMapper" type="com.isz.erp.facade.house.entity.OnlineHouseRecommended">
	    <id column="recommended_id" property="recommended_id"/>
	    <result column="category_id" property="category_id"/>
	    <result column="apartment_id" property="apartment_id"/>
	    <result column="config_code" property="config_code"/>
	    <result column="create_time" property="create_time"/>
	    <result column="create_uid" property="create_uid"/>
	 </resultMap>
	    
	 <select id="selectRecommendedDetailListByCategoryId" resultType="com.isz.erp.facade.house.entity.OnlineHouseRecommended"  parameterType="java.lang.String" >
	     select * from online_house_recommended ohr where ohr.category_id=#{category_id}
	  </select>
	  
	  <update id="deleteByCategoryId" parameterType="java.lang.String">
	  		delete from online_house_recommended where category_id=#{category_id}
	  </update>
	  
	  <update id="deleteByCategoryIdAndCode" parameterType="map">
	  		delete from online_house_recommended where category_id=#{category_id} and config_code=#{config_code}
	  </update>
</mapper>
