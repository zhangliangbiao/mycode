@Service
public class BusinessCircleFacade implements BusinessCircleService {

	@Autowired
	private BusinessCircleServiceBiz businessCircleServiceBiz;
	/**
	 * 查询商圈信息
	 * @return
	 */
	public ResultObjectMsg<List<BusinessCircle>> sercherTtbudinessCircleList() {
		try {
			return businessCircleServiceBiz.sercherTtbudinessCircleList();
		} catch (Exception e) {
			IszLogger.error("BusinessCircleFacade.sercherTtbudinessCircleList", e);
			return new ResultObjectMsg<List<BusinessCircle>>(e.getMessage());
		}
	}
	
	/**
	 * 查询商圈信息(根据市或者区)
	 * @return
	 */
	@Override
	public ResultObjectMsg<List<BusinessCircle>> sercherBudinessCircleByCode(Map<String,Object> data) {
		try {
			return businessCircleServiceBiz.sercherBudinessCircleByCode(data);
		} catch (Exception e) {
			IszLogger.error("BusinessCircleFacade.sercherBudinessCircleByCode", e);
			return new ResultObjectMsg<List<BusinessCircle>>(e.getMessage());
		}
	}

	@Override
	public String getNameByIds(String business_circle_id) throws Exception {
		return businessCircleServiceBiz.getNameByIds(business_circle_id);
	}

}
