<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://code.alibabatech.com/schema/dubbo 
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="erp-service-house" />

	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" address="${dubbo.registry.address}" />

	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="${dubbo.registry.house.port}" payload="20971520"/>
		<!-- 直连监控中心服务器地址  --> 
	<!-- <dubbo:monitor protocol="registry"/> -->
		
	<!-- Provider -->
	<!-- 用户服务接口 -->
	<dubbo:service interface="com.isz.erp.facade.house.service.ResidentialService" ref="residentialServiceFacade"  timeout="1200000"/>
	<dubbo:service interface="com.isz.erp.facade.house.service.HouseService" ref="houseServiceFacade"  timeout="1200000"/>
	<!-- 跟进接口 -->
	<dubbo:service interface="com.isz.erp.facade.house.service.FollowService" ref="followServiceFacade"  timeout="1200000"/>
	<dubbo:service interface="com.isz.erp.facade.house.service.BusinessCircleService" ref="businessCircleFacade"  timeout="1200000"/>
	<!-- 自营公寓服务接口 -->
	<dubbo:service interface="com.isz.erp.facade.house.service.ApartmentService" ref="apartmentServiceFacade"  timeout="1200000"/>
	<!-- 官网发布服务接口 -->
	<dubbo:service interface="com.isz.erp.facade.house.service.OnlineHouseService"  ref="onlineHouseServiceFacade" timeout="1200000"/>
	<!-- 实勘服务接口 -->
	<dubbo:service interface="com.isz.erp.facade.house.service.HouseExplorationService"  ref="houseExplorationServiceFacade" timeout="1200000"/>
	<!-- 申请房源状态变更 -->
	<dubbo:service interface="com.isz.erp.facade.house.service.HouseAuditStatusChangeService"  ref="houseAuditStatusChangeServiceFacade" timeout="1200000"/>	 	
	
	<!-- 自营公寓跟踪服务接口 -->
	<dubbo:service interface="com.isz.erp.facade.house.service.ResidentialBuildingService" ref="residentialBuildingFacade"  timeout="1200000"/>
	<dubbo:service interface="com.isz.erp.facade.house.service.UploadService" ref="uploadServiceFacade"  timeout="1200000"/>
	<dubbo:service interface="com.isz.erp.facade.house.service.DesignService" ref="designServiceFacade"  timeout="1200000"/>
	<!-- 智能锁服务接口 -->
	<dubbo:service interface="com.isz.erp.facade.house.service.LockService" ref="lockServiceFacade"  timeout="1200000"/>
	<!-- 房源统计服务接口 -->
	<dubbo:service interface="com.isz.erp.facade.house.service.ApartmentCountService" ref="apartmentCountServiceFacade"  timeout="1200000"/>
	<dubbo:service interface="com.isz.erp.facade.house.service.ApartmentLogService" ref="apartmentLogServiceFacade"  timeout="1200000"/>
	
	<!-- 房源角色变更接口 -->
	<dubbo:service interface="com.isz.erp.facade.house.service.HouseRolesService" ref="houseRolesServiceFacade"  timeout="1200000"/>

	<!-- 区域商圈接口 -->
	<dubbo:service interface="com.isz.erp.facade.house.service.DistrictBusinessCircleService" ref="districtBusinessCircleServiceFacade"  timeout="1200000"/>
	
	<!-- Consumer -->
	<dubbo:reference interface="com.isz.erp.facade.user.service.PositionService"  id="positionService" check="false"/>
	<dubbo:reference interface="com.isz.erp.facade.user.service.DictService"  id="dictService" check="false"/>
	<dubbo:reference interface="com.isz.erp.facade.user.service.UserService"  id="userService" check="false"/>
	<dubbo:reference interface="com.isz.erp.facade.user.service.DepartService"  id="departService" check="false"/>
	<dubbo:reference interface="com.isz.erp.facade.user.service.DistrictService"  id="districtService" check="false"/>
	<dubbo:reference interface="com.isz.erp.facade.user.service.RedisService"  id="redisService" check="false"/>
	<dubbo:reference interface="com.isz.erp.facade.achievement.service.AchievementConfigRedisService"  id="achievementConfigRedisService" check="false"/>
	
	<dubbo:reference interface="com.isz.erp.facede.bzlog.service.ApartmentLogerService" id="apartmentLogerService" check="false" />
	<dubbo:reference interface="com.isz.erp.facade.user.service.MessageService" id="messageServiceFacade"  check="false"/>
	
	<dubbo:reference interface="com.isz.erp.facade.thirdparty.bridge.service.BridgeCallService" id="bridgeCallServiceFacade"  check="false"/>
	</beans>